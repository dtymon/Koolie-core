{
  "name": "@koolie/core",
  "version": "0.2.0",
  "description": "Koolie - Core functionality required by Koolie packages and apps",
  "license": "MIT",
  "author": "David Tymon",
  "type": "module",
  "koolie-module": "core",
  "repository": {
    "type": "git",
    "url": "https://github.com/dtymon/koolie-core"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "koolie",
    "microservices",
    "typescript"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "dist": "yarn koolie build-dist",
    "build": "yarn clean && yarn compile && yarn dist",
    "lint:src": "ESLINT_USE_FLAT_CONFIG=true eslint --config .eslint.config.js --no-error-on-unmatched-pattern --ignore-pattern 'src/**/*.spec.ts' 'src/**/*.ts'",
    "lint:test": "ESLINT_USE_FLAT_CONFIG=true eslint --config .eslint.config.spec.js --no-error-on-unmatched-pattern 'src/**/*.spec.ts' 'tests/*.spec.ts' 'tests/**/*.spec.ts'",
    "lint": "yarn lint:src && yarn lint:test",
    "lint:fix:src": "ESLINT_USE_FLAT_CONFIG=true eslint --fix --config .eslint.config.js --no-error-on-unmatched-pattern --ignore-pattern 'src/**/*.spec.ts' 'src/**/*.ts'",
    "lint:fix:test": "ESLINT_USE_FLAT_CONFIG=true eslint --fix --config .eslint.config.spec.js --no-error-on-unmatched-pattern 'src/**/*.spec.ts' 'tests/*.spec.ts' 'tests/**/*.spec.ts'",
    "lint:fix": "yarn lint:fix:src && yarn lint:fix:test",
    "test": "NODE_CONFIG_DIR=./etc/config NODE_ENV=test yarn node --experimental-vm-modules $(yarn bin jest) --passWithNoTests",
    "koolie-audit": "yarn run improved-yarn-audit --fail-on-missing-exclusions --ignore-dev-deps --min-severity high",
    "pre-commit": "yarn build && yarn test && yarn lint && yarn koolie-audit",
    "koolie": "koolie",
    "reinstall": "rimraf node_modules yarn.lock; yarn install",
    "release": "yarn build && yarn lint && yarn test && yarn koolie-audit && yarn mkdirp releases && yarn --cwd dist pack --filename releases/koolie-${npm_package_koolie_module}-v${npm_package_version}.tgz",
    "npm-publish": "yarn publish --no-git-tag-version --no-commit-hooks --access public releases/koolie-${npm_package_koolie_module}-v${npm_package_version}.tgz",
    "docs": "yarn koolie build-docs"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "**/*.{ts,js,cjs,mjs,json,pem}",
    "*.map"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    "./3rd-party/avsc": "./dist/avsc/index.js",
    "./3rd-party/axios": "./dist/axios/index.js",
    "./3rd-party/bson": "./dist/bson/index.js",
    "./3rd-party/chalk": "./dist/chalk/index.js",
    "./3rd-party/content-type": "./dist/content-type/index.js",
    "./3rd-party/dateformat": "./dist/dateformat/index.js",
    "./3rd-party/execa": "./dist/execa/index.js",
    "./3rd-party/fs-extra": "./dist/fs-extra/index.js",
    "./3rd-party/http-status-codes": "./dist/http-status-codes/index.js",
    "./3rd-party/json5": "./dist/json5/index.js",
    "./3rd-party/klaw": "./dist/klaw/index.js",
    "./3rd-party/lodash": "./dist/lodash/index.js",
    "./3rd-party/lodash/*": "./dist/lodash/*.js",
    "./3rd-party/luxon": "./dist/luxon/index.js",
    "./3rd-party/mkdirp": "./dist/mkdirp/index.js",
    "./3rd-party/openapi-types": "./dist/openapi-types/index.js",
    "./3rd-party/prettier": "./dist/prettier/index.js",
    "./3rd-party/uuid": "./dist/uuid/index.js",
    "./3rd-party/xml2js": "./dist/xml2js/index.js",
    "./3rd-party/yargs": "./dist/yargs/index.js",
    "./3rd-party/zod": "./dist/zod/index.js",
    "./package.json": "./package.json",
    "./types": "./dist/types/index.js",
    "./types/*": "./dist/types/*.js"
  },
  "devDependencies": {
    "@koolie/tooling": "~0.2.0"
  },
  "dependencies": {
    "@types/content-type": "1.1.8",
    "@types/dateformat": "5.0.2",
    "@types/fs-extra": "11.0.4",
    "@types/klaw": "3.0.6",
    "@types/luxon": "3.4.2",
    "@types/uuid": "9.0.8",
    "@types/yargs": "17.0.32",
    "avsc": "5.7.7",
    "axios": "1.6.8",
    "bson": "6.7.0",
    "chalk": "5.3.0",
    "content-type": "1.0.5",
    "dateformat": "5.0.3",
    "execa": "9.0.2",
    "fs-extra": "11.2.0",
    "http-status-codes": "2.3.0",
    "json5": "2.2.3",
    "klaw": "4.1.0",
    "luxon": "3.4.4",
    "mkdirp": "3.0.1",
    "openapi-types": "12.1.3",
    "prettier": "3.2.5",
    "reflect-metadata": "0.2.2",
    "tslib": "2.6.2",
    "uuid": "9.0.1",
    "yargs": "17.7.2",
    "zod": "3.23.8"
  }
}
